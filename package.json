{
  "name": "Express-Wtith-Typescript-Boilerplate",
  "version": "1.0.0",
  "author": "Hassan Azhar <hassanazharkhan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --fix",
    "clean": "rimraf coverage build tmp",
    "watch": "nodemon -e 'yml, yaml, js, ts, tsx, json' -x 'ts-node' src/server.ts | bunyan -o simple",
    "typeorm": "./node_modules/.bin/ts-node ./node_modules/typeorm/cli.js",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "test": "jest --passWithNoTests",
    "test:unit": "npm test -- tests/unit",
    "test:integration": "npm test -- tests/integration",
    "test:watch": "npm test -- --watch",
    "test:watch:unit": "npm run test:unit -- --watch",
    "test:watch:integration": "npm run test:integration -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:coverage:unit": "npm run test:unit -- --coverage",
    "test:coverage:integration": "npm run test:integration -- --coverage"
  },
  "dependencies": {
    "@hapi/boom": "9.0.0",
    "@hapi/joi": "17.1.0",
    "@types/bunyan": "1.8.6",
    "@types/convict": "4.2.1",
    "@types/express": "4.17.2",
    "@types/express-bunyan-logger": "1.3.2",
    "@types/hapi__joi": "16.0.7",
    "@types/helmet": "0.0.45",
    "@types/node": "13.13.2",
    "@types/swagger-jsdoc": "3.0.2",
    "@types/swagger-ui-express": "4.1.1",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "body-parser": "1.19.0",
    "bunyan": "1.8.12",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "convict": "6.0.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.0",
    "express": "4.17.1",
    "express-bunyan-logger": "1.3.3",
    "helmet": "3.21.2",
    "pg": "7.17.1",
    "routing-controllers": "0.8.1",
    "swagger-jsdoc": "3.5.0",
    "swagger-ui-express": "4.1.3",
    "ts-node": "8.6.2",
    "typedi": "0.8.0",
    "typeorm": "0.2.22",
    "typescript": "3.7.5"
  },
  "devDependencies": {
    "@types/supertest": "2.0.8",
    "@types/jest": "25.2.1",
    "supertest": "4.0.2",
    "ts-jest": "25.4.0",
    "jest": "25.3.0",
    "nodemon": "2.0.2"
  }
}
